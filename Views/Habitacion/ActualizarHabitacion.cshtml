@model HabitacionViewModel
@{
    ViewData["Title"] = "Actualizar Habitacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3> Actualizar Habitacion</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="ActualizarHabitacion" asp-controller="Habitacion" method="post">
                <input type="hidden" asp-for="Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Disponibilidad" class="control-label"></label>
                        <input type="checkbox" asp-for="Disponibilidad" class="form-control">
                        <span asp-validation-for="Disponibilidad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <label asp-for="TipoHabitacionId">Tipo habitacion</label>
                    <select asp-items="Model.ListaTipoHabitacion" class="form-control" asp-for="TipoHabitacionId">
                    </select>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <label asp-for="HotelId">Hotel</label>
                    <select asp-items="Model.ListaHoteles" class="form-control" asp-for="HotelId">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Registrar">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}
