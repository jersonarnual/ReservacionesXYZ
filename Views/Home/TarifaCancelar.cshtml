@model HomeViewModel
@{
    ViewData["Title"] = "TarifaCancelar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reservar</h1>
<hr>
<div class="card shadow mb-5 bg-white rounded">
    <!--Card-Body-->
    <div class="card-body">
        <!--Card-Title-->
        <p class="card-title text-center shadow mb-5 rounded">Formulario de Reserva</p>
        <div class="icons text-center">
            <i class="fa fa-plane fa-2x" aria-hidden="true"></i>
            <i class="fa fa-taxi fa-2x" aria-hidden="true"></i>
            <i class="fa fa-train fa-2x" aria-hidden="true"></i>
        </div>
        <hr>
        <!--Third Row-->
        <form asp-action="RegistrarReservacion" method="post">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="FechaEntrega" class="control-label"></label>
                        <input asp-for="FechaEntrega" class="form-control" />
                        <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="FechaSalida" class="control-label"></label>
                        <input asp-for="FechaSalida" class="form-control" />
                        <span asp-validation-for="FechaSalida" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!--Fifth Row-->
            <div class="row justify-content-center">
                <div class="col-sm-4">
                    <select class="browser-default custom-select mb-4" id="select">
                        <option value="" disabled="" selected="">Personas</option>
                        @for (int i = 0; i < Model.CantidadPersona; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>
            <input type="submit" class="btn btn-primary float-right mt-5" value="Reservar">
        </form>
    </div>
</div>