@model TemporadaViewModel

@{
    ViewData["Title"] = "Registrar Temporada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registrar Temporada</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistrarTemporada">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinal" class="control-label"></label>
                <input asp-for="FechaFinal" class="form-control" />
                <span asp-validation-for="FechaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

